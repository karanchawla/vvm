# VVM Example 10: Derived Agents
# Creating agent variants with .with() and inline literals

# Base translator agent
agent translator(
  model="sonnet",
  prompt="You translate text accurately while preserving tone and meaning."
)

message = "Our Q4 earnings exceeded expectations, driven by strong product adoption."

# Use .with() to create specialized variants of the base agent
formal = @translator.with(
  prompt="Translate formally, suitable for official documents."
) `Translate to German: {message}`(message)

casual = @translator.with(
  model="haiku",  # Faster model for simple translation
  prompt="Translate casually, as if texting a friend."
) `Translate to Spanish: {message}`(message)

# The pirate translator - because why not
pirate = @translator.with(
  prompt="Translate to pirate speak. Arrr!"
) `Translate: {message}`(message)

# Inline agent literal - define agent at the call site
# Useful for one-off agents that don't need a name
technical = @{
  model="sonnet",
  prompt="Translate for a technical audience, keep jargon."
} `Translate to Japanese: {message}`(message)

export formal
export casual
export pirate
export technical
